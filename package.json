{
	"name": "showtime",
	"private": true,
	"license": "MIT",
	"devDependencies": {
		"@types/react": "~17.0.36",
		"@types/react-native": "~0.66.5",
		"patch-package": "^6.4.7",
		"prettier": "^2.4.1",
		"turbo": "^0.8.4"
	},
	"workspaces": [
		"apps/expo",
		"apps/next-react",
		"apps/next-react-native",
		"apps/storybook-react",
		"apps/storybook-react-native",
		"packages/*"
	],
	"scripts": {
		"yolo": "yarn dev:next & yarn workspace @showtime/expo ios & yarn workspace @showtime/expo android",
		"dev:expo": "yarn workspace @showtime/expo dev",
		"dev:next:react": "yarn workspace @showtime/next-react dev",
		"dev:next:react-native": "yarn workspace @showtime/next-react-native dev",
		"dev:storybook:react": "yarn workspace @showtime/storybook-react storybook",
		"dev:storybook:react-native": "yarn workspace @showtime/storybook-react-native start",
		"build": "yarn turbo run build --ignore='packages/**/*' --ignore='apps/**/*' --ignore='!/apps/next-react/**/*'",
		"postinstall": "patch-package"
	},
	"resolutions": {
		"babel-preset-expo": "^8.5.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-native-svg": "^12.1.1"
	},
	"turbo": {
		"baseBranch": "origin/main",
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				]
			},
			"test": {
				"outputs": []
			},
			"lint": {
				"outputs": []
			},
			"dev": {
				"cache": false
			}
		}
	},
	"react-native": {
		"zlib": "browserify-zlib",
		"console": "console-browserify",
		"constants": "constants-browserify",
		"crypto": "react-native-crypto",
		"dns": "dns.js",
		"domain": "domain-browser",
		"http": "@tradle/react-native-http",
		"https": "https-browserify",
		"os": "react-native-os",
		"path": "path-browserify",
		"querystring": "querystring-es3",
		"fs": "react-native-level-fs",
		"_stream_transform": "readable-stream/transform",
		"_stream_readable": "readable-stream/readable",
		"_stream_writable": "readable-stream/writable",
		"_stream_duplex": "readable-stream/duplex",
		"_stream_passthrough": "readable-stream/passthrough",
		"dgram": "react-native-udp",
		"stream": "stream-browserify",
		"timers": "timers-browserify",
		"tty": "tty-browserify",
		"vm": "vm-browserify",
		"tls": false
	},
	"browser": {
		"zlib": "browserify-zlib",
		"console": "console-browserify",
		"constants": "constants-browserify",
		"crypto": "react-native-crypto",
		"dns": "dns.js",
		"domain": "domain-browser",
		"http": "@tradle/react-native-http",
		"https": "https-browserify",
		"os": "react-native-os",
		"path": "path-browserify",
		"querystring": "querystring-es3",
		"fs": "react-native-level-fs",
		"_stream_transform": "readable-stream/transform",
		"_stream_readable": "readable-stream/readable",
		"_stream_writable": "readable-stream/writable",
		"_stream_duplex": "readable-stream/duplex",
		"_stream_passthrough": "readable-stream/passthrough",
		"dgram": "react-native-udp",
		"stream": "stream-browserify",
		"timers": "timers-browserify",
		"tty": "tty-browserify",
		"vm": "vm-browserify",
		"tls": false
	}
}
