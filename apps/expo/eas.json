{
  "build": {
    "production": {
      "releaseChannel": "production",
      "distribution": "store",
      "ios": {
        "autoIncrement": true
      },
      "android": {
        "autoIncrement": true,
        "buildType": "app-bundle",
        "image": "latest"
      },
      "env": {
        "STAGE": "production"
      },
      "node": "14.18.1",
      "cache": {
        "key": "showtime-2"
      }
    },
    "preview": {
      "releaseChannel": "staging",
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "image": "latest"
      },
      "env": {
        "STAGE": "staging"
      },
      "node": "14.18.1",
      "cache": {
        "key": "showtime-2"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "image": "latest"
      },
      "env": {
        "STAGE": "development"
      },
      "node": "14.18.1",
      "cache": {
        "key": "showtime-2"
      }
    }
  },
  "cli": {
    "version": ">= 0.34.0"
  }
}
