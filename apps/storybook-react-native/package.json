{
  "name": "@showtime/storybook-react-native",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "yarn start:dev-client",
    "start": "expo start --dev-client",
    "start:dev-client": "yarn expo:prebuild && expo start --dev-client --port=8083",
    "start:dev-client:clear": "yarn start:dev-client -c",
    "eject": "expo eject",
    "expo:prebuild": "expo prebuild --skip-dependency-update react && yarn react-native link",
    "ios": "EXPO_USE_APPLE_DEVICE=1 yarn expo:prebuild && expo run:ios",
    "android": "yarn expo:prebuild && expo run:android",
    "postinstall": "cd ../.. && yarn patch-package",
    "publish:development": "STAGE=development expo publish",
    "build": "yarn build:development",
    "build:development": "STAGE=development eas build --profile development --platform all",
    "build:development:ios": "STAGE=development eas build --profile development --platform ios",
    "build:development:android": "STAGE=development eas build --profile development --platform android",
    "prestart": "sb-rn-get-stories",
    "storybook-watcher": "sb-rn-watcher",
    "eas-build-post-install": "react-native link"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^12.0.0",
    "@react-native-async-storage/async-storage": "~1.15.0",
    "@react-native-community/datetimepicker": "4.0.0",
    "@react-native-community/slider": "4.1.12",
    "@react-native-segmented-control/segmented-control": "^2.4.0",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/native-stack": "^6.2.5",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-controls": "^6.3.12",
    "@storybook/addon-ondevice-actions": "^6.0.1-alpha.6",
    "@storybook/addon-ondevice-backgrounds": "^6.0.1-alpha.6",
    "@storybook/addon-ondevice-controls": "^6.0.1-alpha.6",
    "@storybook/addon-ondevice-notes": "^6.0.1-alpha.6",
    "@storybook/react-native": "^6.0.1-alpha.6",
    "design-system": "*",
    "expo": "^44.0.0",
    "expo-asset": "~8.4.4",
    "expo-av": "~10.2.0",
    "expo-constants": "~13.0.0",
    "expo-dev-client": "~0.8.0",
    "expo-font": "~10.0.4",
    "expo-gl": "~11.0.3",
    "expo-linear-gradient": "^11.0.0",
    "expo-modules-core": "~0.6.4",
    "expo-linking": "~3.0.0",
    "expo-splash-screen": "~0.14.1",
    "expo-status-bar": "~1.2.0",
    "expo-system-ui": "~1.1.0",
    "expo-updates": "~0.11.3",
    "expo-web-browser": "~10.1.0",
    "react": "18.0.0-rc.0",
    "react-dom": "18.0.0-rc.0",
    "react-native": "0.64.3",
    "react-native-gesture-handler": "^2.1.1",
    "react-native-pager-view": "5.4.9",
    "react-native-reanimated": "^2.3.1",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "~3.10.1",
    "react-native-svg": "12.1.1",
    "react-native-web": "0.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "jest-expo": "^44.0.0",
    "typescript": "4.5.2"
  },
  "private": true
}
